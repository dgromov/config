[core]
    editor = vim
    excludesfile = ~/.gitignore
    preloadindex = true
[user]
	email = dmitriy.k.gromov@gmail.com
	name = Dmitriy Gromov
[github]
    user = dgromov
[color]
    ui = auto
[alias]
    ci = commit
    co = checkout
    st = status
    ls = list

    d  = diff
    dc = diff --cached

    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ll = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --numstat --date=relative

    changes = diff --name-status -r
    diffstat = diff --stat -r

    who = shortlog -s --
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    unstage = reset HEAD --
    review = push origin HEAD:refs/for/master
    rpull = pull --rebase

    edit = "!sh -c \"exec vim $(git list $@ | tr '\n' ' ')\""

    fpr = "!f() { git fetch ${2:-origin} refs/pull/$1/head:pr/$1; }; f"
    fa = fetch --all --prune

    branch-prune = "!git branch --merged | egrep -v \"(^\\*|master)\" | xargs git branch -d #"

    last = for-each-ref --sort=-committerdate --count=10 --format='%(refname:short)' refs/heads/

[merge]
    conflictstyle = diff3
    defaultToUpstream = true
    log = true
[rerere]
    enabled = 1
[push]
    default = simple
[pull]
    rebase = true
[rebase]
    autosquash = true
    autostash = true
    preserve = true
    stat = true
[help]
    autocorrect = 1
[diff]
    tool = delta
    compactionHeuristic = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
